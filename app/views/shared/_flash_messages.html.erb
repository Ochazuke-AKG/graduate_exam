<div id="flash-messages" class="fixed top-20 left-1/2 -translate-x-1/2 z-50 w-full max-w-sm px-4 pointer-events-none">
  <% flash.each do |message_type, message| %>
    <% 
      bg_color = message_type == "notice" ? "bg-three-beige" : "bg-red-500"
      text_color = message_type == "notice" ? "text-three-dark" : "text-white"
    %>
    <div class="<%= bg_color %> <%= text_color %> px-6 py-3 rounded-full shadow-xl text-sm font-bold text-center mb-3 pointer-events-auto border border-three-dark/10">
      <%= message %>
    </div>
  <% end %>
</div>